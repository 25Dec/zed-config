// Zed keymap
//
// For information on binding keys, see the Zed
// documentation: https://zed.dev/docs/key-bindings
//
// To see the default key bindings run `zed: open default keymap`
// from the command palette.
[
  {
    "context": "Workspace",
    "bindings": {
      "alt-q": "workspace::ToggleLeftDock"
    }
  },
  {
    "context": "Workspace",
    "bindings": {
      "alt-w": "file_finder::Toggle"
    }
  },
  {
    "context": "Workspace",
    "bindings": {
      "alt-e": "project_panel::ToggleFocus"
    }
  },
  {
    "context": "Pane",
    "bindings": {
      "alt-a": "pane::ActivatePreviousItem"
    }
  },
  {
    "context": "Pane",
    "bindings": {
      "alt-d": "pane::ActivateNextItem"
    }
  },
  {
    "context": "Editor",
    "bindings": {
      "alt-s": "editor::ToggleCodeActions"
    }
  },
  {
    "context": "Pane",
    "bindings": {
      "alt-x": [
        "pane::CloseActiveItem",
        {
          "close_pinned": false
        }
      ]
    }
  },
  {
    "context": "Pane",
    "bindings": {
      "alt-p": "pane::TogglePinTab"
    }
  }
]
